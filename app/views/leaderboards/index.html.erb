<h1>Leaderboard</h1>
<%= form_tag(leaderboards_path, method: :get) do %>
  <%= select_tag(:zone_id, options_for_select([["All", ""], ["Zone 1", 1], ["Zone 2", 2], ["Zone 3", 3], ["Zone 4", 4], ["Zone 5", 5], ["Zone 6", 6], ["Zone 7", 7], ["Zone 8", 8], ["Zone 9", 9], ["Zone 10", 10], ["Zone 11", 11]])) %>
  <%= submit_tag("Filter by Zone") %>
<% end %>

  <table>
  <thead>
  <tr>
  <th>
  <strong>Rank</strong>
  </th>
  <th>
  <strong>Username</strong>
  </th>
  <th>
  <strong>Zone</strong>
  </th>
  <th>
  <strong>Shots efficiency</strong>
  </th>
  </tr>
  </thead>
  <tbody>
  <% @best_trainings.each_with_index do |training, index| %>
  <tr>
  <th>
    <strong>Rank <%= index + 1 %>:</strong>
  </th>
  <th>
    <%= "#{training.user.first_name} #{training.user.last_name}" %>
  </th>
  <th>
    <%= "#{training.zone_id}" %>
  </th>
  <th>
    <%= training.shooting_efficiency %>%
  </th>
  </tr>
  <% end %>
  </tbody>
  </table>
