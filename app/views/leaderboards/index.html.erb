<!-- app/views/leaderboards/index.html.erb -->
<%= render "shared/navbar" %>
<h1 class="text-center mt-3 mb-3">Classement</h1>

<div class="d-flex" style="width: 100%;">
  <%= form_tag(leaderboards_path, method: :get, class: "mb-4") do %>
    <div class="form-group d-flex justify-content-start">
      <%= label_tag "user_id", "" %>
      <%= text_field_tag :username, params[:username], placeholder: "Nom", class: "form-control", style: "width: 35%; margin-left: 10px;" %>
      <%= label_tag "zone_id", "" %>
      <%= select_tag(:zone_id, grouped_options_for_select([["Principaux", [["Tout", ""], ["2 Points", 20], ["3 Points", 30], ["Lancer franc", 2]]], ["Détails", [["Raquette", 1], ["3 points de face", 3], ["2 points fond droite", 4], ["3 points fond droite", 5], ["2 points angle droite", 6], ["3 points angle droite", 7], ["2 points fond gauche", 8], ["3 points fond gauche", 9], ["2 points fond gauche", 10], ["3 points angle gauche", 11]]]], params[:zone_id]), class: "form-control", style: "width: 25%; margin-left: 10px;") %>
      <%= submit_tag("Filtrer", class: "custom-button") %>
      <%= link_to '<i class="fas fa-xmark fa-1x"></i>'.html_safe, leaderboards_path, class: "btn" %>
    </div>
  <% end %>
</div>


<div class="d-flex justify-content-center align-item-center mb-5 pb-5">
  <table class="table table-striped rounded-table">
    <thead class="fs-3">
      <tr class="text-center">
        <th scope="col" class="py-2 "><strong>Rang</strong></th>
        <th scope="col" class="py-2"><strong>Nom</strong></th>
        <th scope="col" class="py-2"><strong>Zone</strong></th>
        <th scope="col" class="py-2"><strong>Précision</strong></th>
      </tr>
    </thead>
    <tbody>

      <% @profiles.each_with_index do |user, index| %>
        <tr class="text-center">
          <th scope="row"><%= index + 1 %></th>
          <td ><%= link_to "#{user.username}", profil_path(user), class:"text-dark" %></td>
          <% if (params[:zone_id].present? && !["20", "30"].include?(params[:zone_id])) %>
            <td><%= Zone.find(params[:zone_id]).name %></td>
          <% elsif params[:zone_id].present? && ["20", "30"].include?(params[:zone_id]) %>
            <td><%= params[:zone_id].to_i / 10 %> points</td>
          <% else %>
            <td><strong>All</strong></td>
          <% end %>
          <% if params[:zone_id].present? && !["20", "30"].include?(params[:zone_id]) %>
            <td><strong><%= user.average_shooting_efficiency_by_zone(params[:zone_id]).round(1) %> %</strong></td>
          <% elsif params[:zone_id].present? && ["20", "30"].include?(params[:zone_id]) %>
            <td><strong><%= user.average_shooting_efficiency_by_group(params[:zone_id]).round(1) %> %</strong></td>
          <% else %>
            <td><strong><%= user.average_shooting_efficiency.round(1) %> %</strong></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <div style="position: fixed; bottom: 0; width: 100%;">
    <%= render 'shared/footnav' %>
  </div>
