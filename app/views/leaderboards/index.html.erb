<h1>Leaderboard</h1>
  <table>
  <thead>
  <tr>
  <th>
  <strong>Rank</strong>
  </th>
  <th>
  <strong>Username</strong>
  </th>
  <th>
  <strong>Shots efficiency</strong>
  </th>
  </tr>
  </thead>
  <tbody>
  <% @best_trainings.each_with_index do |training, index| %>
  <tr>
  <th>
    <strong>Rank <%= index + 1 %>:</strong>
  </th>
  <th>
    <%= "#{training.user.first_name} #{training.user.last_name}" %>
  </th>
  <th>
    <%= training.shooting_efficiency %>%
  </th>
  </tr>
  <% end %>
  </tbody>
  </table>
