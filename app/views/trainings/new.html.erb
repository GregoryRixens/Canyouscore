<%= link_to image_tag('icons/home-alt.svg', size: '50x50'), root_path, class: "position-absolute mt-4 me-4 text-black end-0"  %>
<div data-controller="zone">
  <%= render "terrain" %>

  <div id="custom-modal" data-zone-target="modal">
    <div class="modal-content p-3">
      <span class="close text-end" data-zone-target="close"><i class="fas fa-xmark fa-2x"></i></span>
      <h4 class="zone-info text-center p-2"></h4>
      <div class="offer-form">
        <%= render "form", training: @training %>
      </div>
    </div>
  </div>
</div>
