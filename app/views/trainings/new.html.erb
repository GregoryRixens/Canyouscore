        <span class="close" data-zone-target="close">&times;</span>
        <div class="container mt-4">
          <div class="row">
            <div class="col-6 m-auto">
              <div class="offer-form">
                <div class="mt-3">
                  <%= render "form", training: @training %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
