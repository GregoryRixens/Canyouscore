<div class="general" data-controller="foot">
  <div class="navigation">
    <ul id="ul1">
      <li class="list <%= 'active' if (controller_name == 'playgrounds' && action_name == 'index') %>">
        <%= link_to playgrounds_path, data: { foot_target: 'link' } do %>
          <span class="icon ">
            <ion-icon name="map-outline"></ion-icon>
          </span>
          <span class="texte">Terrains</span>
        <% end %>
      </li>
      <li class="list <%= 'active' if controller_name == 'leaderboards' %>">
        <%= link_to leaderboards_path, data: { foot_target: 'link' } do %>
          <span class="icon">
            <ion-icon name="medal-outline"></ion-icon>
          </span>
          <span class="texte">Classement</span>
        <% end %>
      </li>
      <li class="list <%= 'active' if (controller_name == 'pages' && action_name == 'home') %>">
        <%= link_to root_path, data: { foot_target: 'link' } do %>
          <span class="icon">
            <ion-icon name="basketball-outline"></ion-icon>
          </span>
          <span class="texte">Accueil</span>
        <% end %>
      </li>
      <li class="list <%= 'active' if (controller_name == 'pages' && action_name == 'stats') %>">
        <%= link_to stats_page_path(current_user), data: { foot_target: 'link' } do %>
          <span class="icon">
            <ion-icon name="stats-chart-outline"></ion-icon>
          </span>
          <span class="texte">Stats</span>
        <% end %>
      </li>
      <li class="list <%= 'active' if (controller_name == 'profils' || controller_name == 'trainings') %>">
        <%= link_to profil_path(current_user), data: { foot_target: 'link' } do %>
          <span class="icon">
            <ion-icon name="person-outline"></ion-icon>
          </span>
          <span class="texte">Profil</span>
        <% end %>
      </li>
      <div class="indicator"></div>
    </ul>
  </div>
</div>

<script>
  const list = document.querySelectorAll(".list");
  function activeLink() {
    list.forEach((item) =>
      item.classList.remove("active"));
    this.classList.add("active");
  }
  list.forEach((item) =>
    item.addEventListener("click", activeLink));
</script>


<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
