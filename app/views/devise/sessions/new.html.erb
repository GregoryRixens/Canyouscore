<div class="homepage">
  <%= link_to root_path do %>
      <%= image_tag 'icons/title.svg', class: 'mx-auto d-block title' %>
    <% end %>
  <%= image_tag 'icons/GroupPlayer.svg', class: 'player', style: 'z-index: -1;' %>
  <div class="container custom-form-container" style="z-index: 10000; max-height: 75vh; padding: 0.5rem 1rem 1rem 1rem; background-color: white; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin: 30% auto; max-width: 90%; height: auto;">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-6 custom-form-column mx-auto text-center mt-4">
        <%# <h2 class="custom-form-header mt-0 text-center" style="font-size: 1.5rem;"> <strong>Log in</strong></h2> %>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false, label: "Mot de passe",
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class: "button-sign text-decoration-none text-white" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row justify-content-center align-items-center">
      <div class="col-md-6 custom-form-column mx-auto">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="container text-center" style="position: fixed; bottom: 6%; width: 100%;">
    <%= render "devise/shared/links"%>
  </div>
</div>
